    "version": "0.2.0",
    "configurations": [
        {
            "type": "bun",
            "request": "launch",
            "name": "start server",
            "program": "src/server.ts",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "watchMode": true,
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "start Database",
            "program": "src/database/sectionDatabase.ts",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "watchMode": true,
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Bun: Current File",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "watchMode": true,
        }
    ]
}