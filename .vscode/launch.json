{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "bun",
            "request": "launch",
            "name": "start server",
            "program": "src/server.ts",
            "cwd": "${workspaceFolder}",
            // "stopOnEntry": false,
            "watchMode": true,
            // "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "start Database",
            "program": "src/database/sectionDatabase.ts",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "watchMode": true,
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Bun: Current File",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "watchMode": true,
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000/anabelle.html",
            "webRoot": "${workspaceFolder}",
            "runtimeExecutable": "/usr/bin/chromium-browser"
        }
    ]
}